<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pikolo="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030">


    <com.madrapps.pikolo.HSLColorPicker
        android:id="@+id/mainColorPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        pikolo:stroke_width="2dp"
        pikolo:arc_width="6dp"
        pikolo:lightness_start_angle="70"

        pikolo:saturation_arc_width="0dp"
        pikolo:saturation_arc_length="0.0001"
        pikolo:saturation_start_angle="0"
        pikolo:saturation_stroke_width="0dp"
        pikolo:saturation_indicator_stroke_width="0dp"
        pikolo:saturation_indicator_radius="0dp"/>

    <View
        android:id="@+id/colorBox"
        android:layout_width="218dp"
        android:layout_height="214dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mainColorPicker"
        app:layout_constraintTop_toTopOf="@+id/mainColorPicker" />

