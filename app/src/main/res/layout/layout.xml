<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pikolo="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030">


    <com.madrapps.pikolo.HSLColorPicker
        android:id="@+id/mainColorPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        pikolo:stroke_width="2dp"
        pikolo:arc_width="15dp"
        pikolo:saturation_radius_offset="50dp"
        pikolo:lightness_radius_offset="50dp"
        />

    <ImageButton
        android:id="@+id/powerButton"
        android:layout_width="159dp"
        android:layout_height="149dp"
        android:background="@drawable/circle"
        android:contentDescription="@string/powerButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mainColorPicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mainColorPicker"
        app:srcCompat="@android:drawable/ic_lock_power_off" />

    <View
        android:id="@+id/powerBorderBox"
        android:layout_width="161dp"
        android:layout_height="150dp"
        android:background="@drawable/circle"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mainColorPicker"
        app:layout_constraintTop_toTopOf="@+id/mainColorPicker" />

